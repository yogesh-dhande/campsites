{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 9001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 9002
    },
    "hosting": {
      "port": 9003
    },
    "ui": {
      "enabled": true,
      "port": 9004
    }
  }
}
